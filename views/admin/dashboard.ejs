                    <div class="card-body">
                      <h4 class="card-title">Transaction History</h4>
                      <div id="donut" class="transaction-chart"></div>
                      <div class="bg-gray-dark d-flex d-md-block d-xl-flex flex-row py-3 px-4 px-md-3 px-xl-4 rounded mt-3">
                        <div class="text-md-center text-xl-left">
                          <h6 class="mb-1">Payment via Razorpay</h6>
                        </div>
                        <div class="align-self-center flex-grow text-right text-md-center text-xl-right py-md-2 py-xl-0">
                          <h6 class="font-weight-bold mb-0">₹ <%= paymentRazor[0].total %></h6>
                        </div>
                      </div>
                      <div class="bg-gray-dark d-flex d-md-block d-xl-flex flex-row py-3 px-4 px-md-3 px-xl-4 rounded mt-3">
                        <div class="text-md-center text-xl-left">
                          <h6 class="mb-1">Payment via COD</h6>
                        </div>
                        <div class="align-self-center flex-grow text-right text-md-center text-xl-right py-md-2 py-xl-0">
                          <h6 class="font-weight-bold mb-0">₹ <%= paymentCod[0].total %></h6>
                        </div>
                      </div>
                      <div class="bg-gray-dark d-flex d-md-block d-xl-flex flex-row py-3 px-4 px-md-3 px-xl-4 rounded mt-3">
                        <div class="text-md-center text-xl-left">
                          <h6 class="mb-1">Payment via Wallet</h6>
                        </div>
                        <div class="align-self-center flex-grow text-right text-md-center text-xl-right py-md-2 py-xl-0">
                          <h6 class="font-weight-bold mb-0">₹ 593</h6>
                        </div>
                      </div>
                    </div>
                  </div>
                </div>
                <div class="col-md-8 grid-margin stretch-card">
                  <div class="card">
                    <div class="card-body">
                      <div class="d-flex flex-row justify-content-between">
                        <h4 class="card-title mb-1">New Users</h4>
                      </div>
                      <div class="row">
                        <div class="col-12">
                          <div class="preview-list">
                            <% users.forEach((user) => { %>
                            <div class="preview-item border-bottom">
                              <!-- Customize this section based on your user data structure -->
                              <!-- You can access user properties like user.name, user.email, etc. -->
                              <div class="preview-thumbnail">
                                <div class="preview-icon bg-primary">
                                  <i class="bi bi-person"></i>
                                </div>
                              </div>
                              <div class="preview-item-content d-sm-flex flex-grow">
                                <div class="flex-grow">
                                  <h6 class="preview-subject">User Name: <%= user.name %></h6>
                                  <p class="text-muted mb-0">Email: <%= user.email %></p>
                                  <!-- Add more user details here -->
                                </div>
                              </div>
                            </div>
                            <% }) %>
                          </div>
                        </div>
                      </div>
                    </div>
                  </div>
                </div>                
              </div>
              <div class="">
