      </div>
      <script src="https://cdn.jsdelivr.net/npm/apexcharts"></script>
      <script>

const paymentRazor = parseInt("<%= paymentRazor[0].total %>")  
const paymentCod = parseInt("<%= paymentCod[0].total %>")   

 var options = {
          series: [{
          name: 'Weekly Revenue',
          data: [100,101,10]
        }, {
          name: 'Monthy Revenue',
          data: [20,90,20]
        }],
          chart: {
          height: 350,
          type: 'area'
        },
        dataLabels: {
          enabled: false
        },
        stroke: {
          curve: 'smooth'
        },
        xaxis: {
          type: 'datetime',
          categories: ["2018-09-19", "2018-09-19T01:30:00.000Z", "2018-09-19T02:30:00.000Z", "2018-09-19T03:30:00.000Z", "2018-09-19T04:30:00.000Z", "2018-09-19T05:30:00.000Z", "2018-09-19T06:30:00.000Z"]
        },
        tooltip: {
          x: {
            format: 'dd/MM/yy'
          },
        },
        };

        var chart = new ApexCharts(document.querySelector("#chart"), options);
        chart.render();



        var options = {
          series: [paymentRazor, paymentCod, 41],
          chart: {
          type: 'donut',
        },
        responsive: [{
          breakpoint: 480,
          options: {
            chart: {
              width: 200
            },
            legend: {
              position: 'bottom'
            }
          }
        }]
        };

        var chart = new ApexCharts(document.querySelector("#donut"), options);
        chart.render();

      </script>

