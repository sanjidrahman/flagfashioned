<%- include("../user/layouts/userheader.ejs") %>

    <style>
        .product {
            height: 150px;
        }

        #button-cart {
            margin-left: 400px;
        }
    </style>

    <section class="breadcrumb-option">
        <div class="container">
            <div class="row">
                <div class="col-lg-12">
                    <div class="breadcrumb__text">
                        <h4>Wishlist</h4>
                        <div class="breadcrumb__links">
                            <a href="/">Home</a>
                            <span>Wishlist</span>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>

    <div id="reloadDiv">
        <div class="container">
            <div class="row">
                <div class="col-lg-12 mt-5">
                    <% if (wish && wish.products) { %>
                        <div class="shopping__cart__table">
                            <div class="table-responsive">
                                <table class="table table-wishlist table-mobile">
                                    <thead>
                                        <tr>
                                            <th>Product</th>
                                            <th>Price</th>
                                            <th></th>
                                            <th></th>
                                            <th></th>
                                        </tr>
                                    </thead>

                                    <tbody>
                                        <% wish.products.forEach((wish)=> { %>
                                            <tr>
                                                <td class="product__cart__item">
                                                    <div class="product__cart__item__pic">
                                                        <img src="/adminassets/productImages/<%= wish.productId.image[0] %>"
                                                            alt="" style="height: 100px; width: 100px;">
                                                    </div>
                                                    <div class="product__cart__item__text">
                                                        <h6>
                                                            <%= wish.productId.name %>
                                                        </h6>
                                                    </div>
                                                </td>
                                                <td class="price-col">
                                                    <h5>â‚¹<%= wish.productId.price %>
                                                    </h5>
                                                </td>
                                                <td class="stock-col">
                                                </td>
                                                <td class="action-col">
                                                    <button class="btn btn-outline-info" id="button-cart"
                                                        onclick="add('<%= wish.productId._id %>')">
                                                        <i class="icon-cart-plus"></i>Add to Cart
                                                    </button>
                                                </td>
                                                <td class="cart__close">
                                                    <a href="#" onclick="removeFromWish('<%= wish.productId._id %>')"><i
                                                            class="fa fa-close"></i></a>
                                                </td>
                                            </tr>
                                            <% }) %>
                                    </tbody>
                                </table>
                            </div>
                        </div>
                        <% } else { %>
                            <h4 class="text-center mb-5">No products in Wishlist</h4>
                            <% } %>
                </div>
            </div>
        </div>
    </div>


    <script>

        function add(productId) {
            $.ajax({
                url: '/wish-cart',
                method: 'post',
                data: {
                    proId: productId
                },
                success: (response) => {
                    if (response.success) {
                        Swal.fire({
                            title: 'Product added',
                            text: 'Product added to cart',
                            timer: 1500,
                            icon: 'success'
                        })
                    } else {
                        Swal.fire({
                            title: 'oops..!',
                            text: response.message,
                            timer: 1500,
                            icon: 'warning'
                        })
                    }
                },
                error: (err) => {
                    console.log(err);
                    Swal.fire({
                        title: 'Error..!',
                        text: response.message,
                        timer: 1500,
                        icon: 'error'
                    })
                }
            })
        }

        function removeFromWish(productId) {
            Swal.fire({
                title: 'Remove from Wishlist',
                text: 'Are you sure to delete this product from the wishlist',
                icon: 'warning',
                showCancelButton: true,
                confirmButtonText: 'Remove',
                confirmButtonColor: '#3085d6',
                cancelButtonColor: '#d33'
            }).then((result) => {
                if (result.isConfirmed) {
                    $.ajax({
                        url: '/wish-delete',
                        method: 'post',
                        data: {
                            proId: productId
                        },
                        success: (response) => {
                            if (response.success) {
                                $('#reloadDiv').load('/wishlist #reloadDiv', () => {
                                    Swal.fire({
                                        title: 'Removed',
                                        text: 'Product removed from wishlist',
                                        icon: 'success',
                                        timer: 1500
                                    })
                                })
                            } else {
                                Swal.fire({
                                    title: 'oops..!',
                                    text: response.message,
                                    icon: 'error',
                                    timer: 1500
                                })
                            }
                        },
                        error: (err) => {
                            console.log(err.message);
                            Swal.fire({
                                title: 'Error!',
                                text: response.message,
                                icon: 'error',
                                timer: 1500
                            })
                        }
                    })
                }
            })
        }

    </script>


    <%- include("../user/layouts/userfooter.ejs") %>