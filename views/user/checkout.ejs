<%- include("../user/layouts/userheader.ejs") %>

    <style>
        .cart__total .primary-btn {
            display: block;
            padding: 12px 81px;
            text-align: center;
            letter-spacing: 2px;

        }
    </style>

    <!-- Breadcrumb Section Begin -->
    <section class="breadcrumb-option">
        <div class="container">
            <div class="row">
                <div class="col-lg-12">
                    <div class="breadcrumb__text">
                        <h4>Checkout</h4>
                        <div class="breadcrumb__links">
                            <a href="./index.html">Home</a>
                            <a href="./shop.html">Shop</a>
                            <a href="./shop.html">Shopping Cart</a>
                            <span>Checkout</span>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>
    <!-- Breadcrumb Section End -->

    <section class="bg-white">
        <div class="container mt-5">
            <div class="row">
                <div class="col-lg-8 main-div">
                    <% if (cart && cart.products) { %>
                        <div class="shopping__cart__table">
                            <table>
                                <thead>
                                    <tr>
                                        <th>Product</th>
                                        <th>Quantity</th>
                                        <th>Total</th>
                                        <th></th>
                                    </tr>
                                </thead>
                                <tbody>
                                    <% cart.products.forEach((cart)=> { %>
                                        <tr class="cart-item">
                                            <td class="product__cart__item">
                                                <div class="product__cart__item__pic">
                                                    <img src="/adminassets/productImages/<%= cart.productId.image[0] %>"
                                                        alt="" style="height: 100px; width: 100px;">
                                                </div>
                                                <div class="product__cart__item__text">
                                                    <h6>
                                                        <%= cart.productId.name %>
                                                    </h6>
                                                    <h5>₹<%= cart.productId.price %>
                                                    </h5>
                                                </div>
                                            </td>
                                            <td class="quantity__item">
                                                <div class="quantity">
                                                    <div class="pro-qty-2">
                                                        <input type="text" value="<%= cart.quantity %>" readonly>
                                                    </div>
                                                </div>
                                            </td>
                                            <td class="cart__price">₹ <%= cart.totalPrice %>
                                            </td>
                                        </tr>
                                        <% }) %>
                                </tbody>
                            </table>
                        </div>
                </div>

                <div class="col-lg-4">
                    <div class="cart__discount">

                    </div>
                    <div class="cart__total">
                        <h6>Summary</h6>
                        <ul>
                            <li>Subtotal <span>₹ <%= total %></span></li>
                            <li>Delivery Charges <span>₹ <%= total %></span></li>
                            <li>Total <span>₹ <%= total %></span></li>
                        </ul>
                        <input type="hidden" name='total' id="total" value="<%= total %>">
                        <hr>
                        <h6>Select payment method</h6>
                        <ul>
                            <li><input type="radio" id="payment" name="payment" value="cod" required>
                                <label for="paymentMethod1">Cash on delivery</label>
                            </li>
                            <li><input type="radio" id="payment" name="payment" value="razor" required>
                                <label for="paymentMethod1">RazorPay</label>
                            </li>
                        </ul>
                        <button onclick="placeOrder()" type="submit" class="primary-btn">Place order</button>
                    </div>
                </div>
                <% } else { %>
                    <h4 class="text-center" style="padding-left: 420px;">No products in cart</h4>
                    <% } %>
            </div>
        </div>

        <div class="col-xl-8 col-lg-8 mb-4">
            <!-- Checkout -->
            <div class="card shadow-0 border mb-4" id="addressDetails" style="width: 750px; margin-left: 90px;">
                <div class="card-body">
                    <h5 class="card-title">Select address</h5>
                    <div class="d-flex justify-content-end">
                        <a href="/add-addresss" class="btn btn-primary btn-sm">Add New Address</a>
                    </div>
                    <hr />
                    <% if (addresses && addresses.addresses) { %>
                        <% addresses.addresses.forEach((address)=> { %>
                            <% if (!address.is_delete) { %>
                                <div id="addrId">
                                    <div class="row">
                                        <div class="col-sm-1">
                                            <div class="form-check">
                                                <input class="form-check-input" type="radio" name="selectedAddress"
                                                    value=" <%= address.fname %> <%= address.lname %>,
                                                        <%= address.address %>, <%= address.city %>, <%= address.pin %> 
                                                        <%= address.phone %>" id="address" required>
                                            </div>
                                        </div>
                                        <div class="col-sm-8">
                                            <p class="text-muted mb-0">
                                                <%= address.fname %>
                                                    <%= address.lname %>
                                            </p>
                                            <p class="text-muted mb-0">
                                                <%= address.phone %>
                                            </p>
                                            <p class="text-muted mb-0">
                                                <%= address.address %>, <%= address.city %>, <%= address.pin %>
                                            </p>
                                        </div>
                                        <div class="col-sm-3">
                                            <a href="/check-edit-address?addressId=<%= address._id %>"
                                                class="btn btn-primary btn-sm mr-2">Edit</a>
                                            <a href="#" onclick="handleDeleteAddress('<%= address._id %>')"
                                                class="btn btn-danger btn-sm">Remove</a>
                                        </div>
                                    </div>
                                </div>
                                <hr />
                                <% } %>
                                    <% }) %>
                                        <% } else { %>
                                            <p>No addresses found.</p>
                                            <% } %>
                </div>
            </div>
            <!-- Checkout -->
        </div>

        </div>
        </div>
    </section>

    <script>

        function handleDeleteAddress(addressId) {
            Swal.fire({
                title: 'Are you sure ?',
                text: 'You want to delete',
                icon: 'warning',
                showCancelButton: true,
                confirmButtonColor: '#3085d6',
                cancelButtonColor: '#d33',
                confirmButtonText: 'Delete'
            }).then((result) => {
                if (result.isConfirmed) {
                    $.ajax({
                        url: '/checkout-delete',
                        method: 'post',
                        data: {
                            addressId: addressId
                        },
                        success: (response) => {
                            if (response.success) {
                                location.reload()
                            } else {
                                Swal.fire({
                                    icon: 'error',
                                    text: 'Failed while deleting',
                                    title: 'Error!',
                                    showConfirmButton: false
                                })
                            }
                        },
                        error: (error) => {
                            console.log(error);
                            swal.fire({
                                icon: 'error',
                                text: 'Something went wrong',
                                title: 'Error!',
                                showConfirmButton: false
                            })
                        }
                    })
                }
            })
        }


        function placeOrder() {
            // alert('hi')

            const address = document.querySelector('input[name = "selectedAddress"]:checked').value
            const payment = document.querySelector('input[name = "payment"]:checked').value
            const total = document.getElementById('total').value

            console.log(address + ',' + payment + ',' + total);

            $.ajax({
                url: '/checkout',
                method: 'post',
                data: {
                    selectedAddress: address,
                    payment: payment,
                    total: total
                },
                success : (response) => {
                    if(response.success) {
                        const param = response.params
                        const url = '/order-placed/'+param
                        window.location.href = url
                    }else{
                        console.log(response.order);
                        razorpayPayment(response.order)
                    }
                }
            })
        }


        function razorpayPayment(order) {
            var options = {
                "key": "rzp_test_lyu1lwSUPIvVBo", // Enter the Key ID generated from the Dashboard
                "amount": order.amount, // Amount is in currency subunits. Default currency is INR. Hence, 50000 refers to 50000 paise
                "currency": "INR",
                "name": "flagfashioned", //your business name
                "description": "Test Transaction",
                "image": "https://example.com/your_logo",
                "order_id": order.id, //This is a sample Order ID. Pass the `id` obtained in the response of Step 1
                // "callback_url": "https://eneqd3r9zrjok.x.pipedream.net/",
                "handler": function (response) {
                    verifyPayment(response, order)
                },
                "prefill": {
                    "name": "Gaurav Kumar", //your customer's name
                    "email": "gaurav.kumar@example.com",
                    "contact": "9000090000"
                },
                "notes": {
                    "address": "Razorpay Corporate Office"
                },
                "theme": {
                    "color": "#3399cc"
                }

            };
            var rzp1 = new Razorpay(options);
            rzp1.open();
        }

        function verifyPayment(payment, order) {
            alert('edfgh')
            $.ajax({
                url: "/verifypayment",
                method: 'post',
                data: {
                    payment,
                    order
                },
                success: (response) => {
                    if (response.success == true) {
                        const param = response.params
                        const url = '/order-placed/'+param
                        window.location.href = url;
                    } else {
                        Swal.fire({
                            icon: 'error',
                            title: 'Payment has failed',
                            showConfirmButton: false,
                            timer: 1500
                        })
                    }
                }
            })
        }

    </script>




    <%- include("../user/layouts/userfooter.ejs") %>